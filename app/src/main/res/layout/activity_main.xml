<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.cd.taobao.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bbl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ffffff">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@drawable/uik_nav_home_normal"
            app:iconSelected="@drawable/uik_nav_home_selected"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"/>

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@drawable/uik_nav_weitao_normal"
            app:iconSelected="@drawable/uik_nav_weitao_selected"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"/>


        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@drawable/ic_nav_message_normal"
            app:iconSelected="@drawable/ic_nav_message_selected"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"/>

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@drawable/uik_nav_cart_normal"
            app:iconSelected="@drawable/uik_nav_cart_selected"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"/>
        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@drawable/uik_nav_my_normal"
            app:iconSelected="@drawable/uik_nav_my_selected"
            app:itemTextSize="8sp"
            app:itemMarginTop="-5dp"/>

    </com.chaychan.library.BottomBarLayout>

</LinearLayout>
